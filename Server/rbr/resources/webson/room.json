{
    "#doc": "The script for a single room",
    "#element": "div",
    "@id": "room-/ROOM/",
    "height": "3em",
    "padding": "0.2em",
    "border": "1px solid gray",
    "margin": "0.5em",
    "background": "#ffc",
    "display": "flex",
    "flex-direction": "row",
    "#": ["$Mode", "$Name", "$Temperature", "$Pad", "$Tools"],

    "$Mode": {
        "#element": "div",
        "height": "100%",
        "text-align": "left",
        "@id": "room-/ROOM/-mode-holder"
    },

    "$Name": {
        "#element": "div",
        "@id": "room-name-/ROOM/",
        "text-align": "left",
        "line-height": "3em",
        "vertical-align": "middle",
        "margin-left": "0.5em",
        "flex": 1,
        "height": "3em",
        "font-size": "90%",
        "font-weight": "bold",
        "cursor": "default",
        "overflow": "wrap"
    },

    "$Temperature": {
        "#element": "div",
        "@id": "room-temp-/ROOM/",
        "font-size": "1.2em",
        "font-weight": "bold",
        "text-align": "center",
        "font-family": "ariel, helvetica, sans-serif",
        "color": "white",
        "vertical-align": "middle",
        "margin": "auto 0 auto 0.5em",
        "border": "1px solid gray",
        "border-radius": "0.5em",
        "width": "4em",
        "height": "1.2em",
        "cursor": "default",
        "overflow": "hidden"
    },

    "$Pad": {
        "#element": "div",
        "width": "0.5em"
    },

    "$Tools": {
        "#element": "img",
        "@id": "room-tools-/ROOM/",
        "width": "2em",
        "height": "2em",
        "padding": "0.5em 0 0 0",
        "@src": "resources/icon/edit.png"
    },

    "$Tools0": {
        "#element": "div",
        "@id": "room-tools-/ROOM/",
        "width": "calc(3em - 2px)",
        "height": "calc(3em - 2px)",
        "border": "1px solid black",
        "background": "#eee",
        "margin-left": "0.5em",
        "#": "$Icon",

        "$Icon": {
            "#element": "img",
            "width": "50%",
            "height": "50%",
            "margin": "0.7em auto 0 auto",
            "pointer-events": "none",
            "@src": "resources/icon/edit.png"
        }
    }
}
