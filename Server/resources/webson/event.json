{
    "#doc": "A single event (time period / temperature)",
    "#element": "div",
    "margin": "1em 0",
    "text-align": "left",
    "display": "flex",
    "flex-direction": "row",
    "#": ["$Info", "$Pad", "$Up", "$Pad", "$Down", "$Pad", "$Edit", "$Pad", "$Delete"],

    "$Info": {
        "#element": "span",
        "@id": "period-/INDEX/",
        "display": "inline-block",
        "flex": 1,
        "height": "3em",
        "line-height": "3em",
        "font-size": "80%",
        "font-weight": "bold"
    },

    "$Up": {
        "#element": "button",
        "@id": "period-up-/INDEX/",
        "width": "3em",
        "height": "3em",
        "#": "$Icon",

        "$Icon": {
            "#element": "img",
            "@src": "resources/icon/up.png",
            "width": "80%",
            "margin": "auto",
            "pointer-events": "none"
        }
    },

    "$Down": {
        "#element": "button",
        "@id": "period-down-/INDEX/",
        "width": "3em",
        "height": "3em",
        "#": "$Icon",

        "$Icon": {
            "#element": "img",
            "@src": "resources/icon/down.png",
            "width": "80%",
            "margin": "auto",
            "pointer-events": "none"
        }
    },

    "$Edit": {
        "#element": "button",
        "@id": "period-edit-/INDEX/",
        "width": "3em",
        "height": "3em",
        "#": "$Icon",

        "$Icon": {
            "#element": "img",
            "@src": "resources/icon/edit.png",
            "width": "80%",
            "margin": "auto",
            "pointer-events": "none"
        }
    },

    "$Delete": {
        "#element": "button",
        "@id": "period-delete-/INDEX/",
        "width": "3em",
        "height": "3em",
        "#": "$Icon",

        "$Icon": {
            "#element": "img",
            "@src": "resources/icon/delete.png",
            "width": "80%",
            "margin": "auto",
            "pointer-events": "none"
        }
    },

    "$Pad": {
        "#element": "div",
        "width": "0.5em"
    }
}
