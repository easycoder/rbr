{
    "#doc": "The menu for the room tools, accessed from the room hamburger",
    "#element": "div",
    "padding": "1em 0",
    "background": "#ffc",
    "text-align": "center",
    "#": ["$Name", "$Up", "$Down", "$Pad", "$Edit", "$Delete", "$Pad", "$Help", "$Cancel"],

    "$Name": {
        "#element": "div",
        "@id": "title-room-name",
        "font-size": "1.3em",
        "padding": "0.5em",
        "border": "1px solid gray",
        "margin": "0.5em",
        "background": "white"
    },

    "$Up": {
        "$ID": "button-up",
        "$Label": "Move this room up",
        "#": "$Button"
    },

    "$Down": {
        "$ID": "button-down",
        "$Label": "Move this room down",
        "#": "$Button"
    },

    "$Edit": {
        "$ID": "button-edit",
        "$Label": "Edit this room",
        "#": "$Button"
    },

    "$Delete": {
        "$ID": "button-delete",
        "$Label": "Delete this room",
        "#": "$Button"
    },

    "$Help": {
        "$ID": "button-help",
        "$Label": "Help",
        "#": "$Button"
    },

    "$Cancel": {
        "$ID": "button-cancel",
        "$Label": "Cancel",
        "#": "$Button"
    },

    "$Button": {
        "#element": "button",
        "@id": "$ID",
        "display": "block",
        "width": "60%",
        "font-size": "1.3em",
        "margin": "0 auto 0.5em auto",
        "border-radius": "0.25em",
        "#content": "$Label"
    },

    "$Pad": {
        "#element": "div",
        "height": "1em"
    }
}
