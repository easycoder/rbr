{
    "#doc": "The time period editor",
    "#element": "div",
    "width": "20em",
    "background": "white",
    "border": "1px solid gray",
    "margin": "0.5em auto 0 auto",
    "padding": "1em",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "text-align": "center",
    "#": ["$Editor", "$Buttons"],

    "$Editor": {
        "#element": "div",
        "display": "flex",
        "font-family": "Helvetica, Arial, SansSerif",
        "font-weight": "bold",
        "#": ["$HourUp", "$HourDown", "$Hour", "$Colon", "$Minute", "$MinuteUp", "$MinuteDown",
            "$Pad", "$TempUp", "$Temp", "$TempDown"],

        "$HourUp": {
            "#element": "img",
            "@id": "hour-up",
            "@src": "resources/icon/up.png",
            "width": "1.5em",
            "height": "1.5em",
            "padding": "0 0.25em"
        },

        "$HourDown": {
            "#element": "img",
            "@id": "hour-down",
            "@src": "resources/icon/down.png",
            "width": "1.5em",
            "height": "1.5em",
            "padding": "0 0.25em"
        },

        "$Hour": {
            "#element": "div",
            "@id": "hour-text",
            "padding": "0.25em",
            "line-height": "2em",
            "#content": "00"
        },

        "$Colon": {
            "#element": "div",
            "padding": "0.25em 0",
            "line-height": "2em",
            "#content": ":"
        },

        "$Minute": {
            "#element": "div",
            "@id": "minute-text",
            "padding": "0.25em",
            "line-height": "2em",
            "#content": "00"
        },

        "$MinuteUp": {
            "#element": "img",
            "@id": "minute-up",
            "@src": "resources/icon/up.png",
            "width": "1.5em",
            "height": "1.5em",
            "padding": "0 0.25em"
        },

        "$MinuteDown": {
            "#element": "img",
            "@id": "minute-down",
            "@src": "resources/icon/down.png",
            "width": "1.5em",
            "height": "1.5em",
            "padding": "0 0.25em"
        },

        "$Pad": {
            "#element": "div",
            "flex": 1
        },

        "$TempUp": {
            "#element": "img",
            "@id": "temp-up",
            "@src": "resources/icon/up.png",
            "width": "1.5em",
            "height": "1.5em",
            "padding": "0 0.25em"
        },

        "$Temp": {
            "#element": "div",
            "@id": "temp-text",
            "#content": "0.0&deg;C",
            "line-height": "2em",
            "padding": "0.25em"
        },

        "$TempDown": {
            "#element": "img",
            "@id": "temp-down",
            "@src": "resources/icon/down.png",
            "width": "1.5em",
            "height": "1.5em",
            "padding": "0 0.25em"
        }
    },

    "$Buttons": {
        "#element": "div",
        "display": "flex",
        "flex-direction": "row",
        "margin-top": "1em",
        "#": ["$Save", "$Pad", "$Cancel", "$Pad", "$Help"],

        "$Save": {
            "#element": "button",
            "@id": "period-save",
            "width": "30%",
            "#content": "Save"
        },

        "$Cancel": {
            "#element": "button",
            "@id": "period-cancel",
            "width": "30%",
            "#content": "Cancel"
        },

        "$Help": {
            "#element": "button",
            "@id": "period-help",
            "width": "30%",
            "#content": "Help"
        },

        "$Pad": {
            "#element": "div",
            "flex": 1
        }
    }
}
