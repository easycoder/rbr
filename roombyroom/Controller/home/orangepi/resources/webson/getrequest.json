{
    "#doc": "Get the request relay",
    "#element": "div",
    "width": "100%",
    "height": "100%",
    "position": "absolute",
    "text-align": "center",
    "#": "$Panel",

    "$Panel": {
        "#element": "div",
        "width": "70%",
        "height": "6em",
        "margin": "1em auto 0",
        "background": "#ffc",
        "border": "1px solid gray",
        "#": ["$Title", "$Input", "$Buttons"],

        "$Title": {
            "#element": "div",
            "#content": "Request relay IP address",
            "margin-top": "0.5em",
            "font-size": "80%",
            "font-weight": "bold"
        },

        "$Input": {
            "#element": "input",
            "@id": "getrequest-input",
            "width": "90%",
            "margin-top": "0.5em"
        },

        "$Buttons": {
            "#element": "div",
            "margin-top": "0.5em",
            "#": ["$OK", "$Cancel"],

            "$OK": {
                "#element": "button",
                "@id": "getrequest-ok",
                "display": "inline-block",
                "width": "5em",
                "margin": "0 0.5em",
                "#content": "OK"
            },

            "$Cancel": {
                "#element": "button",
                "@id": "getrequest-cancel",
                "display": "inline-block",
                "width": "5em",
                "margin": "0 0.5em",
                "#content": "Cancel"
            }
        }
    }
}
