{
    "#doc": "Get relay information",
    "#element": "div",
    "position": "absolute",
    "left": 0,
    "top": 0,
    "width": "100%",
    "height": "100%",
    "#": ["$Text1", "$Text2", "$Relays", "$Buttons", "$Text3"],

    "$Text1": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "green",
        "font-size": "2em",
        "#content": "Relay Information"
    },

    "$Text2": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "Provide room names and relay types/addresses."
    },

    "$Relays": {
        "#element": "div",
        "@id": "cf-relays",
        "width": "calc(100% - 4em)",
        "height": "20em",
        "overflow-y": "scroll",
        "font-size": "1.2em",
        "border": "1px solid black",
        "margin": "0 auto",
        "padding": "1px"
    },

    "$Buttons": {
        "#element": "div",
        "#": ["$AddRelay", "$Refresh"],

        "$AddRelay": {
            "#element": "button",
            "@id": "cf-add-relay",
            "margin": "0.5em 2em 1em",
            "font-size": "1.2em",
            "#content": "Add a relay"
        },

        "$Refresh": {
            "#element": "button",
            "@id": "cf-refresh",
            "margin": "0.5em 0 1em",
            "font-size": "1.2em",
            "#content": "Refresh"
        }
    },

    "$Text3": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "To continue, tap the Next button below."
    }
}
