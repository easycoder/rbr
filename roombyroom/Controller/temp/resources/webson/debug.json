{
    "#doc": "The debug screen",
    "#element": "div",
    "@id": "debug",
    "background": "white",
    "border": "1px solid gray",
    "margin-top": "0.5em",
    "padding": "0 0.5em 0.5e 0.5em",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "display": "flex",
    "flex-direction": "column",
    "width": "80%",
    "text-align": "center",
    "#": ["$Stuff", "$OK"],

    "$Stuff": {
        "#element": "div",
        "flex": 1,
        "@id": "stuff"
    },

    "$OK": {
        "#element": "button",
        "@id": "debug-okbutton",
        "#content": "OK",
        "width": "5em",
        "height": "1.5em",
        "margin-bottom": "1em"
    }
}
