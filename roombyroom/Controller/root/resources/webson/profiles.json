{
    "#doc": "Profiles and Calendar",
    "#element": "div",
    "position": "relative",
    "background": "#ffc",
    "#": ["$Title", "$ProfilesPanel", "$CalendarPanel"],

    "$Title": {
        "#element": "div",
        "@id": "profiles-page-header",
        "font-size": "1.5em",
        "font-weight": "bold",
        "margin-bottom": "0.5em",
        "#content": "Profiles and Calendar"
    },

    "$ProfilesPanel": {
        "#element": "div",
        "@id": "profiles-panel",
        "padding": "1em",
        "text-align": "center",
        "#": ["$ProfilesOuter", "$Calendar", "$Buttons"],

        "$ProfilesOuter": {
            "#element": "div",
            "position": "relative",
            "padding": "1em",
            "border": "1px solid gray",
            "#": ["$Title", "$Profiles", "$ProfilesMask"],

            "$Title": {
                "#element": "div",
                "#content": "&nbsp;Profiles&nbsp;",
                "position": "absolute",
                "left": "50%",
                "top": 0,
                "transform": "translate(-50%, -50%)",
                "font-size": "80%",
                "font-weight": "bold",
                    "background": "#ffc"
            },

            "$Profiles": {
                "#element": "div",
                "@id": "profiles"
            },

            "$ProfilesMask": {
                "#element": "div",
                "@id": "profiles-mask",
                "position": "absolute",
                "left": "0.5em",
                "top": "0.5em",
                "width": "calc(100% - 1em)",
                "height": "calc(100% - 1em)",
                "display": "none",
                "background": "rgba(255, 255, 255, 0.5)"
            }
        },

        "$Calendar": {
            "#element": "div",
            "border": "1px solid gray",
            "position": "relative",
            "margin": "1em auto 0 auto",
            "padding": "1em 3em",
            "display": "flex",
            "align-items": "center",
            "#": ["$Title", "$On", "$Off", "$Pad", "$Edit"],

            "$Title": {
                "#element": "div",
                "#content": "&nbsp;Calendar&nbsp;",
                "position": "absolute",
                "left": "50%",
                "top": 0,
                "transform": "translate(-50%, -50%)",
                "font-size": "80%",
                "font-weight": "bold",
                "background": "#ffc"
            },

            "$Off": {
                "#element": "div",
                "@id": "calendar-off",
                "display": "flex",
                "align-items": "center",
                "width": "5em",
                "cursor": "pointer",
                "#": ["$Icon", "$Label"],

                "$Icon": {
                    "#element": "img",
                    "@src": "resources/icon/power-lo.png",
                    "width": "2em",
                    "height": "2em",
                    "pointer-events": "none"
                },

                "$Label": {
                    "#element": "div",
                    "#content": "&nbsp;&nbsp;Off",
                    "flex": 1,
                    "text-align": "left",
                    "font-weight": "bold",
                    "pointer-events": "none"
                }
            },

            "$On": {
                "#element": "div",
                "@id": "calendar-on",
                "display": "flex",
                "align-items": "center",
                "width": "5em",
                "cursor": "pointer",
                "#": ["$Icon", "$Label"],

                "$Icon": {
                    "#element": "img",
                    "@src": "resources/icon/power-hi.png",
                    "width": "2em",
                    "height": "2em",
                    "pointer-events": "none"
                },

                "$Label": {
                    "#element": "div",
                    "#content": "&nbsp;&nbsp;On",
                    "flex": 1,
                    "text-align": "left",
                    "font-weight": "bold",
                    "pointer-events": "none"
                }
            },

            "$Edit": {
                "#element": "button",
                "@id": "calendar-edit",
                "width": "8em",
                "height": "3em",
                "#content": "Edit"
            },

            "$Pad": {
                "#element": "div",
                "flex": 1
            }
        },

        "$Buttons": {
            "#element": "div",
            "height": "2em",
            "margin-bottom": "0.5em",
            "display": "flex",
            "#": ["$Add", "$Pad", "$OK", "$Pad", "$Pad", "$Cancel"],

            "$Add": {
                "#element": "button",
                "@id": "profiles-add-button",
                "width": "3em",
                "height": "100%",
                "margin-top": "1em",
                "#": "$Icon",

                "$Icon": {
                    "#element": "img",
                    "width": "80%",
                    "margin": "auto",
                    "pointer-events": "none",
                    "@src": "resources/icon/plus.png"
                }
            },

            "$Pad": {
                "#element": "div",
                "flex": "1"
            },

            "$OK": {
                "$ID": "profiles-ok-button",
                "$Label": "OK",
                "#": "$Button"
            },

            "$Cancel": {
                "$ID": "profiles-cancel-button",
                "$Label": "Cancel",
                "#": "$Button"
            },

            "$Button": {
                "#element": "button",
                "@id": "$ID",
                "width": "25%",
                "height": "100%",
                "margin-top": "1em",
                "#content": "$Label"
            }
        }
    },

    "$CalendarPanel": {
        "#element": "div",
        "@id": "calendar-panel",
        "display": "none",
        "padding": "1em",
        "background": "#ffc",
        "text-align": "center",
        "#": ["$Text", "$Table", "$Buttons"],

        "$Text": {
            "#element": "div",
            "#content": "Choose the profile to use for each day of the week",
            "margin-bottom": "0.5em"
        },

        "$Table": {
            "#element": "div",
            "position": "relative",
            "border": "1px solid gray",
            "#": ["$Dialog", "$Mon", "$Tue", "$Wed", "$Thu", "$Fri", "$Sat", "$Sun"],

            "$Dialog": {
                "#element": "div",
                "@id": "calendar-dialog",
                "position": "absolute",
                "display": "flex",
                "flex-direction": "column",
                "left": "15%",
                "top": "2em",
                "width": "60%",
                "margin": "0 auto",
                "border": "1px solid gray",
                "background": "white",
                "display": "none",
                "z-index": 5,
                "#": ["$List", "$Buttons"],

                "$List": {
                    "#element": "div",
                    "@id": "profile-list",
                    "flex": 1,
                    "border": "1px solid gray",
                    "margin": "0.5em"
                },

                "$Buttons": {
                    "#element": "div",
                    "width": "60%",
                    "margin": "auto",
                    "#": "$Cancel",

                    "$Cancel": {
                        "#element": "button",
                        "@id": "calendar-dialog-cancel-button",
                        "width": "6em",
                        "height": "2em",
                        "margin": "0.5em 0",
                        "#content": "Cancel"
                    }
                }
            },

            "$Mon": {
                "$Index": 0,
                "$Name": "Mon",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Tue": {
                "$Index": 1,
                "$Name": "Tue",
                "$Background": "#ddd",
                "#": "$Day"
            },

            "$Wed": {
                "$Index": 2,
                "$Name": "Wed",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Thu": {
                "$Index": 3,
                "$Name": "Thu",
                "$Background": "#ddd",
                "#": "$Day"
            },

            "$Fri": {
                "$Index": 4,
                "$Name": "Fri",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Sat": {
                "$Index": 5,
                "$Name": "Sat",
                "$Background": "#ddd",
                "#": "$Day"
            },

            "$Sun": {
                "$Index": 6,
                "$Name": "Sun",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Day": {
                "#element": "div",
                "@id": "profile-$Index",
                "cursor": "pointer",
                "display": "flex",
                "flex-direction": "row",
                "align-items": "center",
                "height": "2em",
                "padding": "0.5em",
                "background": "$Background",
                "#": ["$DayName", "$Profile"],

                "$DayName": {
                    "#element": "div",
                    "width": "5em",
                    "text-align": "left",
                    "font-weight": "bold",
                    "pointer-events": "none",
                    "cursor": "auto",
                    "#content": "$Name"
                },

                "$Profile": {
                    "#element": "div",
                    "@id": "profile-text-$Index",
                    "pointer-events": "none",
                    "flex": 1,
                    "height": "1em",
                    "#content": "&nbsp;"
                }
            }
        },

        "$Buttons": {
            "#element": "div",
            "height": "2em",
            "margin-bottom": "0.5em",
            "display": "flex",
            "#": ["$OK", "$Pad", "$Pad", "$Cancel"],

            "$OK": {
                "$ID": "calendar-ok-button",
                "$Label": "OK",
                "#": "$Button"
            },

            "$Cancel": {
                "$ID": "calendar-cancel-button",
                "$Label": "Cancel",
                "#": "$Button"
            }
        }
    },

    "$Pad": {
        "#element": "div",
        "flex": "1"
    },

    "$Button": {
        "#element": "button",
        "@id": "$ID",
        "width": "25%",
        "height": "100%",
        "margin-top": "1em",
        "#content": "$Label"
    }
}
