{
    "#doc": "Get the relay type",
    "#element": "div",
    "position": "absolute",
    "left": 0,
    "top": 0,
    "width": "100%",
    "height": "100%",
    "#": ["$Text1", "$Text2", "$R1", "$Tasmota", "$Shelly", "$Text3"],

    "$Text1": {
        "#element": "div",
        "@id": "relay-type",
        "margin": "1em 1em 0 1em",
        "color": "green",
        "font-size": "2em",
        "#content": "Relay type"
    },

    "$Text2": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "Please give the number of relays handled by this extender."
    },

    "$R1": {
        "#element": "button",
        "@id": "type-r1",
        "#content": "R1"
    },

    "$Tasmota": {
        "#element": "button",
        "@id": "type-tasmota",
        "#content": "Tasmota"
    },

    "$Shelly": {
        "#element": "button",
        "@id": "type-shelly",
        "#content": "Shelly"
    },

    "$Text3": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "Then tap the Next button below."
    }
}
