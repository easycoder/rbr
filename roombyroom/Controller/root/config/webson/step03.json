{
    "#doc": "Step 3 - get the name",
    "#element": "div",
    "position": "absolute",
    "left": 0,
    "top": 0,
    "width": "100%",
    "height": "100%",
    "#": ["$Text1", "$Text2", "$Text3", "$Name", "$Text4"],

    "$Text1": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "green",
        "font-size": "2em",
        "#content": "Configuration - step 3"
    },

    "$Text2": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "Provide some basic information about the system."
    },

    "$Text3": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "In the box below, type the name by which this system should be known. It could be derived from the name of the occupant, the address, or something entirely different."
    },

    "$Name": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "text-align": "center",
        "#": "$Text",

        "$Text": {
            "#element": "input",
            "@id": "cf-name",
            "width": "calc(100% - 4em)",
            "font-size": "1.2em"
        }
    },

    "$Text4": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "Then tap the Next button below."
    }
}
