{
    "#doc": "The period editor component",
    "#element": "div",
    "@id": "period-editor",
    "display": "flex",
    "font-family": "Helvetica, Arial, SansSerif",
    "font-weight": "bold",
    "padding": "1em",
    "#": [
        "$HourDown",
        "$HourUp",
        "$Hour",
        "$Colon",
        "$Minute",
        "$MinuteDown",
        "$MinuteUp",
        "$Pad",
        "$TempDown",
        "$Temp",
        "$TempUp",
        "$Pad",
        "$Save",
        "$Delete"
    ],

    "$HourUp": {
        "#element": "img",
        "@id": "hour-up",
        "@src": "resources/icon/up.png",
        "width": "1.3em",
        "height": "1.3em",
        "padding": "0 0.25em",
        "cursor": "pointer"
    },

    "$HourDown": {
        "#element": "img",
        "@id": "hour-down",
        "@src": "resources/icon/down.png",
        "width": "1.3em",
        "height": "1.3em",
        "padding": "0 0.25em",
        "cursor": "pointer"
    },

    "$Hour": {
        "#element": "div",
        "@id": "hour-text",
        "#content": "00"
    },

    "$Colon": {
        "#element": "div",
        "#content": ":"
    },

    "$Minute": {
        "#element": "div",
        "@id": "minute-text",
        "#content": "00"
    },

    "$MinuteUp": {
        "#element": "img",
        "@id": "minute-up",
        "@src": "resources/icon/up.png",
        "width": "1.3em",
        "height": "1.3em",
        "padding": "0 0.25em",
        "cursor": "pointer"
    },

    "$MinuteDown": {
        "#element": "img",
        "@id": "minute-down",
        "@src": "resources/icon/down.png",
        "width": "1.3em",
        "height": "1.3em",
        "padding": "0 0.25em",
        "cursor": "pointer"
    },

    "$Pad": {
        "#element": "div",
        "flex": 1
    },

    "$TempUp": {
        "#element": "img",
        "@id": "temp-up",
        "@src": "resources/icon/up.png",
        "width": "1.3em",
        "height": "1.3em",
        "padding": "0 0.25em",
        "cursor": "pointer"
    },

    "$Temp": {
        "#element": "div",
        "@id": "temp-text",
        "#content": "0.0&deg;C"
    },

    "$TempDown": {
        "#element": "img",
        "@id": "temp-down",
        "@src": "resources/icon/down.png",
        "width": "1.3em",
        "height": "1.3em",
        "padding": "0 0.25em",
        "cursor": "pointer"
    },

    "$Save": {
        "#element": "img",
        "@id": "period-save",
        "@src": "resources/icon/save.png",
        "width": "1.2em",
        "height": "1.2em",
        "padding": "0 1em",
        "cursor": "pointer"
    },

    "$Delete": {
        "#element": "img",
        "@id": "period-delete",
        "@src": "resources/icon/delete.png",
        "width": "1.2em",
        "height": "1.2em",
        "cursor": "pointer"
    }
}
