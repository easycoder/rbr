{
    "#doc": "Manage profiles",
    "#element": "div",
    "padding": "1em",
    "background": "#ffc",
    "text-align": "center",
    "#": ["$Profiles", "$Buttons"],

    "$Profiles": {
        "#element": "div",
        "@id": "profiles"
    },

    "$Buttons": {
        "#element": "div",
        "height": "2em",
        "margin-bottom": "0.5em",
        "display": "flex",
        "#": ["$Add", "$Pad", "$Save", "$Pad", "$Help", "$Pad", "$Cancel"],

        "$Add": {
            "#element": "button",
            "@id": "profiles-add-button",
            "width": "3em",
            "height": "100%",
            "margin-top": "1em",
            "#": "$Icon",

            "$Icon": {
                "#element": "img",
                "width": "80%",
                "margin": "auto",
                "pointer-events": "none",
                "@src": "resources/icon/plus.png"
            }
        },

        "$Save": {
            "#element": "button",
            "@id": "profiles-save-button",
            "width": "25%",
            "height": "100%",
            "margin-top": "1em",
            "#content": "Save"
        },

        "$Help": {
            "#element": "button",
            "@id": "profiles-help-button",
            "width": "25%",
            "height": "100%",
            "margin-top": "1em",
            "#content": "Help"
        },

        "$Cancel": {
            "#element": "button",
            "@id": "profiles-cancel-button",
            "width": "25%",
            "height": "100%",
            "margin-top": "1em",
            "#content": "Cancel"
        },

        "$Pad": {
            "#element": "div",
            "flex": "1"
        }
    }
}
