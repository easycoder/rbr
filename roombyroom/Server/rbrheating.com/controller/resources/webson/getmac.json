{
    "#doc": "Get the MAC address of the system controller",
    "#element": "div",
    "width": "100%",
    "height": "100%",
    "position": "absolute",
    "text-align": "center",
    "#": "$Panel",

    "$Panel": {
        "#element": "div",
        "width": "70%",
        "margin": "1em auto 0",
        "background": "#ffc",
        "border": "1px solid gray",
        "#": ["$Title", "$Input", "$Buttons", "$Link"],

        "$Title": {
            "#element": "div",
            "#content": "Controller MAC address",
            "margin-top": "0.5em",
            "font-size": "80%",
            "font-weight": "bold"
        },

        "$Input": {
            "#element": "input",
            "@id": "getmac-input",
            "width": "90%",
            "margin-top": "0.5em"
        },

        "$Buttons": {
            "#element": "div",
            "margin-top": "0.5em",
            "#": ["$OK", "$Cancel", "$Help"],

            "$OK": {
                "#element": "button",
                "@id": "getmac-ok",
                "display": "inline-block",
                "width": "5em",
                "margin": "0 0.5em",
                "#content": "OK"
            },

            "$Cancel": {
                "#element": "button",
                "@id": "getmac-cancel",
                "display": "inline-block",
                "width": "5em",
                "margin": "0 0.5em",
                "#content": "Cancel"
            },

            "$Help": {
                "#element": "button",
                "@id": "getmac-help",
                "display": "inline-block",
                "width": "5em",
                "margin": "0 0.5em",
                "#content": "Help"
            }
        },

        "$Link": {
            "#element": "a",
            "@id": "getmac-welcome",
            "@href": "#",
            "display": "block",
            "font-size": "70%",
            "padding": "1em 0 0.5em 0",
            "#content": "Go to the Welcome page"
        }
    }
}
