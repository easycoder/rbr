{
    "#doc": "Choose a system",
    "#element": "div",
    "background": "white",
    "border": "1px solid gray",
    "margin-top": "0.5em",
    "padding": "0 0.5em 0.5e 0.5em",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "text-align": "center",
    "#": ["$Title", "$Text", "$Select", "$Buttons"],

    "$Title": {
        "#element": "div",
        "@id": "dialog-title",
        "font-weight": "bold"
    },

    "$Text": {
        "#element": "div",
        "@id": "dialog-text",
        "margin": "1em",
        "#content": "Text"
    },

    "$Select": {
        "#element": "select",
        "@id": "system-names",
        "@name": "systemName"
    },

    "$Buttons": {
        "#element": "div",
        "display": "flex",
        "flex-direction": "row",
        "margin": "1em 0",
        "#": ["$LRPadding", "$Cancel", "$LRPadding"],

        "$Cancel": {
            "#element": "button",
            "@id": "cancel-button",
            "#content": "Cancel"
        },

        "$LRPadding": {
            "#element": "div",
            "flex": 1
        }
    }
}
