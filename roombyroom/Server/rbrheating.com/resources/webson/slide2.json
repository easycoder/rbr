{
    "#element": "div",
    "position": "absolute",
    "left": 0,
    "top": 0,
    "width": "100%",
    "height": "100%",
    "#": ["$Title", "$Text1", "$Text2", "$Text3", "$Text4", "$Text5", "$Text6"],

    "$Title": {
        "#element": "div",
        "margin": "1em 1em 1em 1em",
        "color": "green",
        "font-weight": "bold",
        "font-size": "2em",
        "#content": "Key features"
    },

    "$Text1": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
