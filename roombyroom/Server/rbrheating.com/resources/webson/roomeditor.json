{
    "#element": "div",
    "width": "80%",
    "margin": "1em auto 0 auto",
    "border": "1px solid gray",
    "padding": "0.5em",
    "background": "#ffc",
    "text-align": "left",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "#": ["$Name", "$Sensor", "$Relays", "$Times", "$Buttons"],

    "$Name": {
        "@element": "div",
        "#": ["$NameLabel", "$NameInput"],

        "$NameLabel": {
            "$Text": "Room name",
            "#": "$Label"
        },

        "$NameInput": {
            "#element": "input",
            "@id": "edit-room-name",
            "#type": "text",
            "width": "100%"
        }
    },

    "$Sensor": {
        "@element": "div",
        "#": ["$SensorLabel", "$SensorInput"],

        "$SensorLabel": {
            "$Text": "Sensor IP address",
            "#": "$Label"
        },

        "$SensorInput": {
            "#element": "input",
            "@id": "edit-sensor-ip",
            "#type": "text",
            "width": "100%"
        }
    },

    "$Relays": {
        "@element": "div",
        "#": ["$RelaysLabel", "$RelayList"],

        "$RelaysLabel": {
            "$Text": "Relay IP addresses (one per line)",
            "#": "$Label"
        },

        "$RelayList": {
            "#element": "textarea",
            "@id": "edit-relay-ip",
            "width": "100%",
            "vertical-align": "top",
            "height": "4em"
        }
    },

    "$Times": {
        "#element": "div",
        "padding": "0.2em 0",
        "#": ["$TimesHeader", "$TimesDiv"],

        "$TimesHeader": {
            "#element": "div",
            "width": "100%",
            "display": "flex",
            "flex-direction": "row",
            "#": ["$TimesLabel", "$Pad", "$AddEvent"],

            "$TimesLabel": {
                "#element": "div",
                "$Text": "Event times",
                "display": "inline-block",
                "width": "55%",
                "height": "1em",
                "font-size": "80%",
                "font-weight": "bold",
                "padding-top": "0.3em",
                "#content": "Event times"
            },

            "$Pad": {
                "#element": "div",
                "display": "inline-block",
                "flex": "1"
            },

            "$AddEvent": {
                "#element": "button",
                "@id": "add-event-button",
                "display": "inline-block",
                "width": "30%",
                "height": "2em",
                "#content": "Add an event"
            }
        },

        "$TimesDiv": {
            "#element": "div",
            "@id": "edit-times",
            "border": "1px solid gray",
            "margin-top": "0.2em"
        }
    },

    "$Buttons": {
        "#element": "div",
        "height": "2em",
        "margin-bottom": "0.5em",
        "#": ["$OK", "$Cancel"],

        "$OK": {
            "#element": "button",
            "@id": "edit-ok-button",
            "width": "45%",
            "height": "2em",
            "margin-top": "1em",
            "float": "left",
            "#content": "OK"
        },

        "$Cancel": {
            "#element": "button",
            "@id": "edit-cancel-button",
            "width": "45%",
            "height": "2em",
            "margin-top": "1em",
            "float": "right",
            "#content": "Cancel"
        }
    },

    "$Label": {
        "#element": "div",
        "font-size": "80%",
        "font-weight": "bold",
        "margin": "0.5em 0 0.2em 0",
        "#content": "$Text"
    }
}
