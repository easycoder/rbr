{
    "#doc": "Profiles and Calendar",
    "#element": "div",
    "#": ["$ProfilesPanel", "$CalendarPanel"],

    "$ProfilesPanel": {
        "#element": "div",
        "@id": "profiles-panel",
        "padding": "1em",
        "background": "#ffc",
        "text-align": "center",
        "#": ["$Title", "$Profiles", "$Calendar", "$Buttons"],

        "$Title": {
            "#element": "div",
            "font-size": "1.5em",
            "font-weight": "bold",
            "margin-bottom": "0.5em",
            "#content": "Profiles"
        },

        "$Profiles": {
            "#element": "div",
            "padding": "1em",
            "border": "1px solid gray",
            "@id": "profiles"
        },

        "$Calendar": {
            "#element": "div",
            "margin-top": "0.5em",
            "padding": "1em 3em",
            "#": "$Button",

            "$Button": {
                "#element": "button",
                "@id": "calendar",
                "height": "3em",
                "font-size": "102%",
                "padding": "0 3em",
                "#content": "Calendar"
            }
        },

        "$Buttons": {
            "#element": "div",
            "height": "2em",
            "margin-bottom": "0.5em",
            "display": "flex",
            "#": ["$Add", "$Pad", "$OK", "$Pad", "$Help", "$Pad", "$Cancel"],

            "$Add": {
                "#element": "button",
                "@id": "profiles-add-button",
                "width": "3em",
                "height": "100%",
                "margin-top": "1em",
                "#": "$Icon",

                "$Icon": {
                    "#element": "img",
                    "width": "80%",
                    "margin": "auto",
                    "pointer-events": "none",
                    "@src": "resources/icon/plus.png"
                }
            },

            "$Pad": {
                "#element": "div",
                "flex": "1"
            },

            "$OK": {
                "$ID": "profiles-ok-button",
                "$Label": "OK",
                "#": "$Button"
            },

            "$Help": {
                "$ID": "profiles-help-button",
                "$Label": "Help",
                "#": "$Button"
            },

            "$Cancel": {
                "$ID": "profiles-cancel-button",
                "$Label": "Cancel",
                "#": "$Button"
            },

            "$Button": {
                "#element": "button",
                "@id": "$ID",
                "width": "25%",
                "height": "100%",
                "margin-top": "1em",
                "#content": "$Label"
            }
        }
    },

    "$CalendarPanel": {
        "#element": "div",
        "@id": "calendar-panel",
        "display": "none",
        "padding": "1em",
        "background": "#ffc",
        "text-align": "center",
        "#": ["$Title", "$Table", "$Buttons"],

        "$Title": {
            "#element": "div",
            "font-size": "1.5em",
            "font-weight": "bold",
            "margin-bottom": "0.5em",
            "#content": "Calendar"
        },

        "$Table": {
            "#element": "div",
            "position": "relative",
            "border": "1px solid gray",
            "#": ["$Dialog", "$Mon", "$Tue", "$Wed", "$Thu", "$Fri", "$Sat", "$Sun"],

            "$Dialog": {
                "#element": "div",
                "@id": "calendar-dialog",
                "position": "absolute",
                "display": "flex",
                "flex-direction": "column",
                "left": "15%",
                "top": "2em",
                "width": "60%",
                "margin": "0 auto",
                "border": "1px solid gray",
                "background": "white",
                "display": "none",
                "#": ["$List", "$Buttons"],

                "$List": {
                    "#element": "div",
                    "@id": "profile-list",
                    "flex": 1
                },

                "$Buttons": {
                    "#element": "div",
                    "width": "60%",
                    "margin": "0.5em auto",
                    "#": "$Cancel",

                    "$Cancel": {
                        "#element": "button",
                        "@id": "calendar-dialog-cancel-button",
                        "width": "6em",
                        "height": "2em",
                        "margin-top": "1em",
                        "#content": "Cancel"
                    }
                }
            },

            "$Mon": {
                "$Index": 0,
                "$Name": "Mon",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Tue": {
                "$Index": 1,
                "$Name": "Tue",
                "$Background": "#ddd",
                "#": "$Day"
            },

            "$Wed": {
                "$Index": 2,
                "$Name": "Wed",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Thu": {
                "$Index": 3,
                "$Name": "Thu",
                "$Background": "#ddd",
                "#": "$Day"
            },

            "$Fri": {
                "$Index": 4,
                "$Name": "Fri",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Sat": {
                "$Index": 5,
                "$Name": "Sat",
                "$Background": "#ddd",
                "#": "$Day"
            },

            "$Sun": {
                "$Index": 6,
                "$Name": "Sun",
                "$Background": "#eee",
                "#": "$Day"
            },

            "$Day": {
                "#element": "div",
                "display": "flex",
                "flex-direction": "row",
                "align-items": "center",
                "height": "2em",
                "padding": "0.5em",
                "background": "$Background",
                "#": ["$DayName", "$Profile1", "$Time", "$Profile2"],

                "$DayName": {
                    "#element": "div",
                    "width": "3em",
                    "text-align": "left",
                    "font-weight": "bold",
                    "pointer-events": "none",
                    "cursor": "auto",
                    "#content": "$Name"
                },

                "$Profile1": {
                    "#element": "div",
                    "@id": "profile1-$Index",
                    "flex": 1,
                    "border-left": "1px solid gray",
                    "cursor": "pointer",
                    "#content": "&nbsp;"
                },

                "$Time": {
                    "#element": "div",
                    "@id": "profile-time-$Index",
                    "width": "5em",
                    "border-left": "1px solid gray",
                    "cursor": "pointer",
                    "#content": "&nbsp;"
                },

                "$Profile2": {
                    "#element": "div",
                    "@id": "profile2-$Index",
                    "flex": 1,
                    "border-left": "1px solid gray",
                    "cursor": "pointer",
                    "#content": "&nbsp;"
                }
            }
        },

        "$Buttons": {
            "#element": "div",
            "height": "2em",
            "margin-bottom": "0.5em",
            "display": "flex",
            "#": ["$OK", "$Pad", "$Help", "$Pad", "$Cancel"],

            "$OK": {
                "$ID": "calendar-ok-button",
                "$Label": "OK",
                "#": "$Button"
            },

            "$Help": {
                "$ID": "calendar-help-button",
                "$Label": "Help",
                "#": "$Button"
            },

            "$Cancel": {
                "$ID": "calendar-cancel-button",
                "$Label": "Cancel",
                "#": "$Button"
            }
        }
    },

    "$Pad": {
        "#element": "div",
        "flex": "1"
    },

    "$Button": {
        "#element": "button",
        "@id": "$ID",
        "width": "25%",
        "height": "100%",
        "margin-top": "1em",
        "#content": "$Label"
    }
}
