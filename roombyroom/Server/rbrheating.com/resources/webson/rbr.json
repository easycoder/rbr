{
    "#doc": "The top-level layout script",
    "#element": "div",
    "width": "100%",
    "height": "100%",
    "position": "relative",
    "text-align": "center",
    "display": "flex",
    "flex-direction": "column",
    "font-size": "<#parent_width/27>",
    "#": ["$Titles", "$OuterPanel", "$HelpPanel", "$StatisticsPanel"],

    "$Titles": {
        "#element": "div",
        "@id": "titles",
        "position": "relative",
        "padding-bottom": "0.5em",
        "border": "2px solid #328080",
        "background-image": "linear-gradient(to bottom, rgba(255,150,150,1), rgba(150,200,255,1))",
        "#": ["$Statistics", "$Tools", "$Title", "$Subtitle"],

        "$Statistics": {
            "#element": "img",
            "@id": "statistics-icon",
            "position": "absolute",
            "width": "2em",
            "display": "inline-block",
            "@src": "resources/icon/statistics.png",
            "top": "0.5em",
            "left": "1em"
        },

        "$Tools": {
            "#element": "div",
            "position": "absolute",
            "width": "2em",
            "display": "inline-block",
            "top": "0.5em",
            "right": "1em",
            "#": ["$Hamburger", "$Alive"],

            "$Hamburger": {
                "#element": "img",
                "@id": "hamburger-icon",
                "@src": "resources/icon/hamburger.png",
                "width": "100%"
            },

            "$Alive": {
                "#element": "div",
                "#": "$AliveIcon",

                "$AliveIcon": {
                    "$element": "div",
                    "@id": "alive",
                    "width": "0.5em",
                    "height": "0.5em",
                    "border": "1px solid blue",
                    "border-radius": "50%",
                    "background": "#6f6",
                    "margin": "0.4em auto"
                }
            }
        },

        "$Title": {
            "#element": "div",
            "#content": "Room By Room",
            "@id": "rbr-banner",
            "font-size": "2em",
            "font-weight": "bold",
            "color": "#450"
        },

        "$Subtitle": {
            "#element": "div",
            "font-size": "<#parent_width/35>",
            "font-family": "Arial, SansSerif",
            "#content": "Intelligent heating when and where you need it",
            "color": "#450"
        }
    },

    "$OuterPanel": {
        "#element": "div",
        "@id": "outerpanel",
        "position": "relative",
        "background": "url(resources/img/backdrop.jpg)",
        "background-size": "cover",
        "background-position": "center",
        "flex": 1,
        "#": ["$Title", "$ModePanel", "$DialogPanel", "$FullWidthPanel", "$MainPanel"],

        "$Title": {
            "#element": "div",
            "@id": "title",
            "height": "2.25em",
            "background": "white",
            "padding": "0.25em 0",
            "font-weight": "bold",
            "#": ["$SystemName", "$Profile"],

            "$SystemName": {
                "#element": "span",
                "@id": "system-name",
                "float": "left",
                "margin": ".5em 0 0 1em"
            },

            "$Profile": {
                "#element": "button",
                "@id": "profile-button",
                "#content": "Profile",
                "float": "right",
                "height": "2em",
                "font-size": "1.1em"
            }
        },

        "$ModePanel": {
            "#element": "div",
            "@id": "mode-panel",
            "position": "absolute",
            "z-index": 10,
            "width": "60%",
            "left": "20%",
            "top": "1em"
        },

        "$DialogPanel": {
            "#element": "div",
            "@id": "dialog-panel",
            "position": "absolute",
            "z-index": 20,
            "width": "50%",
            "left": "25%",
            "top": "1em"
        },

        "$FullWidthPanel": {
            "#element": "div",
            "@id": "full-width-panel",
            "position": "absolute",
            "z-index": 20,
            "width": "90%",
            "left": "5%",
            "top": "1em"
        },

        "$MainPanel": {
            "#element": "div",
            "@id": "mainpanel",
            "background": "white",
            "border": "1px solid gray"
        }
    },

    "$ButtonsPanel": {
        "#element": "div",
        "@id": "buttonspanel",
        "flex": 1,
        "display": "none"
    },

    "$HelpPanel": {
        "#element": "div",
        "@id": "helppanel",
        "flex": 1,
        "display": "none"
    },

    "$StatisticsPanel": {
        "#element": "div",
        "@id": "statisticspanel",
        "flex": 1,
        "display": "none"
    }
}
