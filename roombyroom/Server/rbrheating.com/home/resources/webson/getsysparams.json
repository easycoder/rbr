{
    "#doc": "The system parameters menu, accessed from the main hamburger",
    "#element": "div",
    "padding": "1em 0",
    "background": "#ffc",
    "text-align": "center",
    "#": ["$Config", "$GetName", "$GetRequest", "$Restart", "$Help", "$Cancel"],

    "$Config": {
        "$ID": "button-config",
        "$Label": "Configuration",
        "#": "$Button"
    },

    "$GetName": {
        "$ID": "button-getname",
        "$Label": "Set the system name",
        "#": "$Button"
    },

    "$GetRequest": {
        "$ID": "button-getrequest",
        "$Label": "Set the request relay IP",
        "#": "$Button"
    },

    "$Restart": {
        "$ID": "button-restart",
        "$Label": "Restart the controller",
        "#": "$Button"
    },

    "$Help": {
        "$ID": "button-help",
        "$Label": "Help",
        "#": "$Button"
    },

    "$Cancel": {
        "$ID": "button-cancel",
        "$Label": "Cancel",
        "#": "$Button"
    },

    "$Button": {
        "#element": "button",
        "@id": "$ID",
        "display": "block",
        "width": "60%",
        "font-size": "1.3em",
        "margin": "0 auto 0.5em auto",
        "border-radius": "0.25em",
        "#content": "$Label"
    },

    "$Pad": {
        "#element": "div",
        "height": "1em"
    }
}
