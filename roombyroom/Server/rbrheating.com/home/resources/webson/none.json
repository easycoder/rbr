{
    "#doc": "A blank button for where there is no relay",
    "#element": "button",
    "@id" : "room-/ROOM/-mode-icon",
    "display": "flex",
    "flex-direction": "row",
    "width": "8em",
    "#": ["$Button", "$Padding"],

    "$Button": {
        "#element": "div",
        "margin-right": "0.2em",
        "pointer-events": "none",
        "height": "3em"
    },

    "$Padding": {
        "#element": "div",
        "width": "0.2em",
        "pointer-events": "none"
    }
}
