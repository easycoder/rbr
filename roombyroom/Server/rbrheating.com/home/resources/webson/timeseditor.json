{
    "#doc": "The editor for timed mode",
    "#element": "div",
    "padding": "1em",
    "background": "#ffc",
    "text-align": "center",
    "#": ["$Name", "$TimesDiv", "$Buttons"],

    "$Name": {
        "#element": "div",
        "@id": "title-room-name",
        "font-size": "1.3em",
        "padding": "0.5em",
        "border": "1px solid gray",
        "background": "white"
    },

    "$TimesDiv": {
        "#element": "div",
        "@id": "edit-times",
        "margin-top": "1em"
    },

    "$Buttons": {
        "#element": "div",
        "height": "3em",
        "margin-bottom": "0.5em",
        "display": "flex",
        "#": ["$Add", "$Pad", "$Save", "$Pad", "$Help", "$Pad", "$Cancel"],

        "$Add": {
            "#element": "button",
            "@id": "edit-add-button",
            "width": "3em",
            "height": "3em",
            "margin-top": "1em",
            "#": "$Icon",

            "$Icon": {
                "#element": "img",
                "width": "80%",
                "margin": "auto",
                "pointer-events": "none",
                "@src": "resources/icon/plus.png"
            }
        },

        "$Save": {
            "#element": "button",
            "@id": "edit-save-button",
            "width": "25%",
            "height": "3em",
            "margin-top": "1em",
            "#content": "Save"
        },

        "$Help": {
            "#element": "button",
            "@id": "edit-help-button",
            "width": "25%",
            "height": "3em",
            "margin-top": "1em",
            "#content": "Help"
        },

        "$Cancel": {
            "#element": "button",
            "@id": "edit-cancel-button",
            "width": "25%",
            "height": "3em",
            "margin-top": "1em",
            "#content": "Cancel"
        },

        "$Pad": {
            "#element": "div",
            "flex": "1"
        }
    },

    "$Label": {
        "#element": "div",
        "font-size": "80%",
        "font-weight": "bold",
        "margin": "0.5em 0 0.3em 0",
        "#content": "$Text"
    }
}
