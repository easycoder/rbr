{
    "#doc": "The main panel script",
    "#element": "div",
    "@id": "main-panel",
    "height": "calc(100vh - 1em)",
    "position": "relative",
    "text-align": "center",
    "flex-direction": "column",
    "overflow-x": "hidden",
    "#": ["$OuterPanel"],

    "$OuterPanel": {
        "#element": "div",
        "@id": "outer-panel",
        "position": "relative",
        "width": "100%",
        "height": "100%",
        "#": ["$DialogPanel", "$ContentPanel"],

        "$DialogPanel": {
            "#element": "div",
            "@id": "dialog-panel",
            "position": "absolute",
            "z-index": 20,
            "width": "70%",
            "left": "15%",
            "top": "1em"
        },

        "$ContentPanel": {
            "#element": "div",
            "@id": "content-panel",
            "width": "100%",
            "height": "100%"
        }
    }
}
