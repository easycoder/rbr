{
    "#element": "div",
    "@id": "waiting",
    "position": "absolute",
    "top": "6em",
    "#": "$Panel",

    "$Panel": {
        "#element": "div",
        "height": "6em",
        "border": "1px solid black",
        "background": "lightgray",
        "#": ["$Waiting", "$Cancel"],

        "$Waiting": {
            "#element": "div",
            "@id": "wait-message",
            "margin-top": "1em"
        },

        "$Cancel": {
            "#element": "button",
            "@id": "wait-cancel",
            "margin-top": "1em",
            "#content": "Cancel"
        }
    }
}
