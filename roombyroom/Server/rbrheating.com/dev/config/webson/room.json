{
    "#doc": "Information for a single room",
    "#element": "div",
    "@id": "cf-room-<ID>",
    "width": "100%",
    "height": "1.2em",
    "display": "flex",
    "flex-direction": "row",
    "padding": "0.2em",
    "#": ["$ID", "$Name", "$Edit", "$Delete"],

    "$ID": {
        "#element": "div",
        "@id": "cf-room-<ID>-index",
        "font-size": "80%",
        "width": "2em",
        "#content": "<INDEX>"
    },

    "$Name": {
        "#element": "input",
        "@id": "cf-room-<ID>-name",
        "flex": 1,
        "margin-right": "2em"
    },

    "$Edit": {
        "#element": "img",
        "@id": "cf-room-<ID>-edit",
        "@src": "icon/edit.png",
        "width": "1em",
        "height": "1em",
        "cursor": "pointer",
        "margin-right": "1em"
    },

    "$Delete": {
        "#element": "img",
        "@id": "cf-room-<ID>-delete",
        "@src": "icon/delete.png",
        "width": "1em",
        "height": "1em",
        "cursor": "pointer",
        "margin-right": "1em"
    }
}
