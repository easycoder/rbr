{
    "#doc": "Information for a single relay",
    "#element": "div",
    "width": "100%",
    "height": "1.2em",
    "display": "flex",
    "flex-direction": "row",
    "padding": "0.2em",
    "#": ["$ID", "$Room", "$Type", "$Address", "$Delete"],

    "$ID": {
        "#element": "div",
        "@id": "cf-relay-<ID>",
        "font-size": "80%",
        "width": "2em"
    },

    "$Room": {
        "#element": "input",
        "@id": "cf-relay-<ID>-room",
        "flex": 1,
        "margin-right": "0.2em"
    },

    "$Type": {
        "#element": "input",
        "@id": "cf-relay-<ID>-type",
        "width": "6em",
        "margin-right": "0.2em"
    },

    "$Address": {
        "#element": "input",
        "@id": "cf-relay-<ID>-address",
        "width": "9em",
        "margin-right": "1em"
    },

    "$Delete": {
        "#element": "img",
        "@id": "cf-room-<ID>-delete",
        "@src": "resources/icon/delete.png",
        "width": "1em",
        "height": "1em",
        "cursor": "pointer",
        "margin-right": "1em"
    }
}
