{
    "#doc": "An information dialog",
    "#element": "div",
    "background": "white",
    "border": "1px solid gray",
    "margin-top": "0.5em",
    "padding": "0 0.5em 0.5e 0.5em",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "text-align": "center",
    "#": ["$Title", "$Text", "$OKButton"],

    "$Title": {
        "#element": "div",
        "@id": "dialog-title",
        "font-weight": "bold"
    },

    "$Text": {
        "#element": "div",
        "@id": "dialog-text",
        "margin": "1em",
        "#content": "Text"
    },

    "$OKButton": {
        "#element": "button",
        "@id": "dialog-okbutton",
        "#content": "OK",
        "width": "5em",
        "height": "1.5em",
        "margin-bottom": "1em"
    }
}
