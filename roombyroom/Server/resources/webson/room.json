{
    "#doc": "The script for a single room",
    "#element": "div",
    "@id": "room-/ROOM/",
    "padding": "0.2em",
    "border": "1px solid gray",
    "margin": "0.5em",
    "background": "#ffc",
    "display": "flex",
    "flex-direction": "row",
    "#": ["$Mode", "$Name", "$Temperature", "$Pad", "$Edit"],

    "$Mode": {
        "#element": "div",
        "height": "100%",
        "text-align": "left",
        "@id": "room-/ROOM/-mode-holder"
    },

    "$Name": {
        "#element": "div",
        "@id": "room-name-/ROOM/",
        "text-align": "left",
        "line-height": "2em",
        "margin-left": "0.5em",
        "flex": 1,
        "height": "2em",
        "font-weight": "bold",
        "cursor": "default",
        "overflow": "wrap"
    },

    "$Temperature": {
        "#element": "div",
        "@id": "room-temp-/ROOM/",
        "font-size": "1.2em",
        "font-weight": "bold",
        "text-align": "center",
        "font-family": "ariel, helvetica, sans-serif",
        "color": "white",
        "vertical-align": "middle",
        "margin": "auto 0 auto 0.5em",
        "border": "1px solid gray",
        "border-radius": "0.5em",
        "width": "4em",
        "height": "1.2em",
        "cursor": "default",
        "overflow": "hidden"
    },

    "$Pad": {
        "#element": "div",
        "width": "1em"
    },

    "$Edit": {
        "#element": "img",
        "@id": "room-tools-/ROOM/",
        "width": "2em",
        "height": "2em",
        "vertical-align": "middle",
        "@src": "resources/icon/edit.png"
    }
}
