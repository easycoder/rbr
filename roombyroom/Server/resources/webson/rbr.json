{
    "#doc": "The top-level layout script",
    "#element": "div",
    "width": "100%",
    "height": "100%",
    "position": "relative",
    "text-align": "center",
    "display": "flex",
    "flex-direction": "column",
    "#": ["$Titles", "$OuterPanel", "$HelpPanel"],
    
    "$Titles": {
        "#element": "div",
        "@id": "titles",
        "position": "relative",
        "padding-bottom": "0.5em",
        "border": "2px solid #328080",
        "background-image": "linear-gradient(to bottom, rgba(255,150,150,1), rgba(150,200,255,1))",
        "#": ["$Dummy", "$Tools", "$Title", "$Subtitle"],

        "$Dummy": {
            "#element": "div",
            "position": "absolute",
            "width": "2em",
            "display": "inline-block",
            "top": "0.5em",
            "left": "1em"
        },

        "$Tools": {
            "#element": "div",
            "position": "absolute",
            "width": "2em",
            "display": "inline-block",
            "top": "0.5em",
            "right": "1em",
            "#": ["$Hamburger", "$Alive"],

            "$Hamburger": {
                "#element": "img",
                "@id": "hamburger",
                "@src": "resources/icon/hamburger.png",
                "width": "100%"
            },

            "$Alive": {
                "#element": "div",
                "#": "$AliveIcon",

                "$AliveIcon": {
                    "$element": "div",
                    "@id": "alive",
                    "width": "0.5em",
                    "height": "0.5em",
                    "border": "1px solid green",
                    "border-radius": "50%",
                    "background": "#6f6",
                    "margin": "0.5em auto"
                }
            }
        },

        "$Title": {
            "#element": "div",
            "font-size": "<#parent_width/12>",
            "#content": "Room By Room"
        },

        "$Subtitle": {
            "#element": "div",
            "font-size": "<#parent_width/35>",
            "font-family": "Arial, SansSerif",
            "#content": "Intelligent heating when and where you need it"
        }
    },

    "$OuterPanel": {
        "#element": "div",
        "@id": "outerpanel",
        "position": "relative",
        "background": "url(resources/img/backdrop.jpg)",
        "background-size": "cover",
        "background-position": "center",
        "flex": 1,
        "#": ["$SystemName", "$ModePanel", "$DialogPanel", "$FullWidthPanel", "$MainPanel"],

        "$SystemName": {
            "#element": "div",
            "@id": "system-name",
            "background": "white",
            "padding": "0.25em 0",
            "font-size": "75%",
            "font-weight": "bold"
        },

        "$ModePanel": {
            "#element": "div",
            "@id": "mode-panel",
            "position": "absolute",
            "z-index": 10,
            "width": "60%",
            "left": "20%",
            "top": "1em"
        },

        "$DialogPanel": {
            "#element": "div",
            "@id": "dialog-panel",
            "position": "absolute",
            "z-index": 20,
            "width": "50%",
            "left": "25%",
            "top": "1em"
        },

        "$FullWidthPanel": {
            "#element": "div",
            "@id": "full-width-panel",
            "position": "absolute",
            "z-index": 20,
            "width": "90%",
            "left": "5%",
            "top": "1em"
        },

        "$MainPanel": {
            "#element": "div",
            "@id": "mainpanel",
            "background": "white",
            "border": "1px solid gray"
        }
    },

    "$ButtonsPanel": {
        "#element": "div",
        "@id": "buttonspanel",
        "flex": 1,
        "display": "none"
    },

    "$HelpPanel": {
        "#element": "div",
        "@id": "helppanel",
        "flex": 1,
        "display": "none",
        "margin-right": "0.5em"
    }
}
