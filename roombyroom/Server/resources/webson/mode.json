{
    "#doc": "The mode dialog",
    "background": "white",
    "border": "1px solid gray",
    "margin-top": "0.5em",
    "visibility": "hidden",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "text-align": "center",
    "#": ["$Title", "$RoomName", "$On", "$Timed", "$Off", "$Pad", "$Buttons"],

    "$Title": {
        "#element": "div",
        "font-weight": "bold",
        "#content": "Operating mode for"
    },

    "$RoomName": {
        "#element": "div",
        "@id": "mode-room-name",
        "font-weight": "bold",
        "#content": "/ROOM/"
    },

    "$On": {
        "$ID": "mode-on",
        "$Label1": "On",
        "$Label2": "Set your desired temperature",
        "#": "$OnButton",

        "$OnButton": {
            "#element": "div",
            "@id": "$ID",
            "margin": "0.5em",
            "padding": "0 1em",
            "background": "#eee",
            "border": "1px solid gray",
            "border-radius": "0.5em",
            "#": ["$Line1", "$Line2", "$UpDown"],

            "$Line1": {
                "#element": "div",
                "#content": "$Label1",
                "font-weight": "bold",
                "pointer-events": "none"
            },

            "$Line2": {
                "#element": "div",
                "#content": "$Label2",
                "font-size": "70%",
                "pointer-events": "none"
            },

            "$UpDown": {
                "#element": "div",
                "display": "flex",
                "margin": "0.5em auto",
                "pointer-events": "none",
                "#": ["$Down", "$Target", "$Up"],

                "$Down": {
                    "#element": "div",
                    "@id" : "on-down",
                    "float": "left",
                    "border": "1px solid gray",
                    "border-radius": "0.5em",
                    "background": "lightgray",
                    "padding": "0.5em",
                    "pointer-events": "auto",
                    "#": "$DownImg",

                    "$DownImg": {
                        "#element": "img",
                        "@src": "resources/icon/blueminus.png",
                        "height": "1.5em",
                        "pointer-events": "none"
                    }
                },

                "$Target": {
                    "#element": "div",
                    "@id": "on-target",
                    "flex": 1,
                    "font-weight": "bold",
                    "padding": "0.7em 0.5em",
                    "pointer-events": "none",
                    "#content": "15.5&deg;C"
                },

                "$Up": {
                    "#element": "div",
                    "@id" : "on-up",
                    "float": "right",
                    "border": "1px solid gray",
                    "border-radius": "0.5em",
                    "background": "lightgray",
                    "padding": "0.5em",
                    "pointer-events": "auto",
                    "#": "$DownImg",

                    "$DownImg": {
                        "#element": "img",
                        "@src": "resources/icon/redplus.png",
                        "height": "1.5em",
                        "pointer-events": "none"
                    }
                }
            }
        }
    },

    "$Timed": {
        "$ID": "mode-timed",
        "$Label1": "Timed",
        "$Label2": "Use the schedule provided",
        "#": "$Button"
    },

    "$Off": {
        "$ID": "mode-off",
        "$Label1": "Off",
        "$Label2": "Permanently off",
        "#": "$Button"
    },

    "$Button": {
        "#element": "div",
        "@id": "$ID",
        "width": "80%",
        "height": "2.3em",
        "font-size": "100%",
        "margin": "0.5em auto",
        "padding": "0 1em",
        "background": "#eee",
        "border": "1px solid gray",
        "border-radius": "0.5em",
        "#": ["$Line1", "$Line2"],

        "$Line1": {
            "#element": "div",
            "#content": "$Label1",
            "font-weight": "bold",
            "pointer-events": "none"
        },

        "$Line2": {
            "#element": "div",
            "#content": "$Label2",
            "font-size": "70%",
            "pointer-events": "none"
        }
    },

    "$Pad": {
        "#element": "div",
        "height": "1em"
    },

    "$Buttons": {
        "#element": "div",
        "margin-bottom": "0.5em",
        "#": ["$Cancel", "$Pad", "$Help"],

        "$Cancel": {
            "$ID": "mode-cancel",
            "$Label": "Cancel",
            "#": "$Button"
        },

        "$Help": {
            "$ID": "mode-help",
            "$Label": "Help",
            "#": "$Button"
        },

        "$Pad": {
            "#element": "div",
            "display": "inline-block",
            "width": "1em"
        },

        "$Button": {
            "#element": "button",
            "@id": "$ID",
            "display": "inline-block",
            "width": "30%",
            "height": "2.3em",
            "font-weight": "bold",
            "#content": "$Label"
        }
    }
}
