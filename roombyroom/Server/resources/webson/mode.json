{
    "#doc": "The mode dialog",
    "background": "white",
    "border": "1px solid gray",
    "margin-top": "0.5em",
    "padding": "0 0.5em",
    "visibility": "hidden",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "text-align": "center",
    "#": ["$Title", "$RoomName", "$On", "$Timed", "$Off", "$Pad", "$Buttons"],

    "$Title": {
        "#element": "div",
        "font-weight": "bold",
        "#content": "Operating mode for"
    },

    "$RoomName": {
        "#element": "div",
        "@id": "mode-room-name",
        "font-weight": "bold",
        "#content": "/ROOM/"
    },

    "$On": {
        "#element": "div",
        "@id": "mode-on",
        "margin": "0.5em 0",
        "padding": "0 0.5em",
        "background": "#eee",
        "border": "1px solid gray",
        "border-radius": "0.5em",
        "display": "flex",
        "flex-direction": "row",
        "#": ["$IconDiv", "$Text"],

        "$IconDiv": {
            "#element": "div",
            "height": "6em",
            "display": "flex",
            "align-items": "center",
            "pointer-events": "none",
            "#": "$Icon",

            "$Icon": {
                "#element": "img",
                "@src": "resources/icon/temperature.png",
                "width": "2em",
                "height": "auto",
                "pointer-events": "none"
            }
        },

        "$Text": {
            "#element": "div",
            "margin-left": "1em",
            "flex": 1,
            "pointer-events": "none",
            "#": ["$Line1", "$Line2", "$UpDown"],

            "$Line1": {
                "#element": "div",
                "#content": "On",
                "font-weight": "bold"
            },

            "$Line2": {
                "#element": "div",
                "#content": "Set your desired temperature",
                "font-size": "70%"
            },

            "$UpDown": {
                "#element": "div",
                "display": "flex",
                "margin": "0.5em auto",
                "#": ["$Down", "$Target", "$Up"],

                "$Down": {
                    "#element": "div",
                    "@id" : "on-down",
                    "float": "left",
                    "border": "1px solid gray",
                    "border-radius": "0.5em",
                    "background": "lightgray",
                    "padding": "0.5em",
                    "pointer-events": "auto",
                    "#": "$DownImg",

                    "$DownImg": {
                        "#element": "img",
                        "@src": "resources/icon/blueminus.png",
                        "height": "1.5em",
                        "pointer-events": "none"
                    }
                },

                "$Target": {
                    "#element": "div",
                    "@id": "on-target",
                    "flex": 1,
                    "font-weight": "bold",
                    "padding": "0.7em 0.5em",
                    "pointer-events": "none",
                    "#content": "15.5&deg;C"
                },

                "$Up": {
                    "#element": "div",
                    "@id" : "on-up",
                    "float": "right",
                    "border": "1px solid gray",
                    "border-radius": "0.5em",
                    "background": "lightgray",
                    "padding": "0.5em",
                    "pointer-events": "auto",
                    "#": "$DownImg",

                    "$DownImg": {
                        "#element": "img",
                        "@src": "resources/icon/redplus.png",
                        "height": "1.5em",
                        "pointer-events": "none"
                    }
                }
            }
        }
    },

    "$Timed": {
        "#element": "div",
        "@id": "mode-timed",
        "display": "flex",
        "flex-direction": "row",
        "height": "2.4em",
        "margin": "0.5em 0",
        "padding": "0.2em 0.5em 0 0.5em",
        "background": "#eee",
        "border": "1px solid gray",
        "border-radius": "0.5em",
        "#": ["$Icon", "$Text"],

        "$Icon": {
            "#element": "img",
            "@src": "resources/icon/clock.png",
            "width": "2em",
            "height": "2em",
            "pointer-events": "none"
        },

        "$Text": {
            "#element": "div",
            "flex": "1",
            "pointer-events": "none",
            "#": ["$Line1", "$Line2"],

            "$Line1": {
                "#element": "div",
                "#content": "Timed",
                "font-weight": "bold"
            },

            "$Line2": {
                "#element": "div",
                "#content": "Use the schedule provided",
                "font-size": "70%"
            }
        }
    },

    "$Off": {
        "#element": "div",
        "@id": "mode-off",
        "display": "flex",
        "flex-direction": "row",
        "height": "2.4em",
        "margin": "0.5em 0",
        "padding": "0.2em 0.5em 0 0.5em",
        "background": "#eee",
        "border": "1px solid gray",
        "border-radius": "0.5em",
        "pointer-events": "auto",
        "#": ["$Icon", "$Text"],

        "$Icon": {
            "#element": "img",
            "@src": "resources/icon/off.png",
            "width": "2em",
            "height": "2em",
            "pointer-events": "none"
        },

        "$Text": {
            "#element": "div",
            "flex": "1",
            "pointer-events": "none",
            "#": ["$Line1", "$Line2"],

            "$Line1": {
                "#element": "div",
                "#content": "Off",
                "font-weight": "bold"
            },

            "$Line2": {
                "#element": "div",
                "#content": "Permanently off",
                "font-size": "70%"
            }
        }
    },

    "$Pad": {
        "#element": "div",
        "height": "1em"
    },

    "$Buttons": {
        "#element": "div",
        "margin-bottom": "0.5em",
        "#": ["$Cancel", "$Pad", "$Help"],

        "$Cancel": {
            "$ID": "mode-cancel",
            "$Label": "Cancel",
            "#": "$Button"
        },

        "$Help": {
            "$ID": "mode-help",
            "$Label": "Help",
            "#": "$Button"
        },

        "$Pad": {
            "#element": "div",
            "display": "inline-block",
            "width": "1em"
        },

        "$Button": {
            "#element": "button",
            "@id": "$ID",
            "display": "inline-block",
            "width": "30%",
            "height": "2.3em",
            "font-weight": "bold",
            "#content": "$Label"
        }
    }
}
