{
    "#doc": "Choose a system / Add a new system",
    "#element": "div",
    "background": "white",
    "border": "1px solid gray",
    "margin-top": "0.5em",
    "padding": "0 0.5em 0.5e 0.5em",
    "box-shadow": "0.5em 0.5em 0.5em #444",
    "text-align": "center",
    "#": ["$Title", "$Text", "$Select", "$Login", "$Buttons"],

    "$Title": {
        "#element": "div",
        "@id": "dialog-title",
        "font-weight": "bold"
    },

    "$Text": {
        "#element": "div",
        "@id": "dialog-text",
        "margin": "1em",
        "#content": "Text"
    },

    "$Select": {
        "#element": "select",
        "@id": "system-names",
        "@name": "systemName"
    },

    "$Login": {
        "#element": "div",
        "@id": "login",
        "display": "none",
        "width": "80%",
        "margin": "1em auto",
        "padding-bottom": "1em",
        "background": "#ffc",
        "border": "1px solid gray",
        "#": ["$MACTitle", "$MACInput", "$PWDTitle", "$PWDInput"],

        "$MACTitle": {
            "#element": "div",
            "#content": "Controller MAC address",
            "margin-top": "0.5em",
            "font-size": "80%",
            "font-weight": "bold"
        },

        "$MACInput": {
            "#element": "input",
            "@id": "getmac-input",
            "width": "90%",
            "margin-top": "0.5em"
        },

        "$PWDTitle": {
            "#element": "div",
            "#content": "Controller password",
            "margin-top": "0.5em",
            "font-size": "80%",
            "font-weight": "bold"
        },

        "$PWDInput": {
            "#element": "input",
            "@id": "getpassword-input",
            "width": "90%",
            "margin-top": "0.5em"
        }
    },

    "$Buttons": {
        "#element": "div",
        "display": "flex",
        "flex-direction": "row",
        "margin": "1em 0",
        "#": ["$LRPadding", "$Help", "$CenterPadding", "$Cancel", "$LRPadding"],

        "$Add": {
            "#element": "button",
            "@id": "add-button",
            "#content": "Add"
        },

        "$Remove": {
            "#element": "button",
            "@id": "remove-button",
            "#content": "Remove"
        },

        "$Help": {
            "#element": "button",
            "@id": "help-button",
            "#content": "Help"
        },

        "$Cancel": {
            "#element": "button",
            "@id": "cancel-button",
            "#content": "Cancel"
        },

        "$LRPadding": {
            "#element": "div",
            "flex": 1
        },

        "$CenterPadding": {
            "#element": "div",
            "width": "1em"
        }
    }
}
