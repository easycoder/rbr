{
    "#doc": "A simple statistics result table",
    "#element": "div",
    "@id": "statistics-table1",
    "#": "$Row",

    "$Row": {
        "#element": "div",
        "@id": "statistics-row-/ROW/",
        "display": "flex",
        "#": ["$Name", "$Value"],

        "$Name": {
            "#element": "div",
            "@id": "statistics-name-/ROW/",
            "flex": 2,
            "margin": "0.1em 0.1em 0.1em 0.2em",
            "border": "1px solid gray",
            "#content": "<name>"
        },

        "$Value": {
            "#element": "div",
            "@id": "statistics-value-/ROW/",
            "flex": 3,
            "margin": "0.1em 0.2em 0.1em 0.1em",
            "border": "1px solid gray",
            "#content": "<value>"
        }
    }
}
