{
    "#element": "div",
    "position": "absolute",
    "left": 0,
    "top": 0,
    "width": "100%",
    "height": "100%",
    "#": ["$Title", "$Text1", "$Text2", "$Text3", "$Text4", "$Text5", "$Text6", "$Image1"],

    "$Title": {
        "#element": "div",
        "margin": "1em 1em 1em 1em",
        "color": "green",
        "font-weight": "bold",
        "font-size": "2em",
        "#content": "Key features"
    },

    "$Text1": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "bold",
        "font-size": "1.4em",
        "#content": "Save up to 30% on fuel bills"
    },

    "$Text2": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "bold",
        "font-size": "1.4em",
        "#content": "Each room has an independent schedule of heating times and temperatures"
    },

    "$Text3": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "bold",
        "font-size": "1.4em",
        "#content": "No disruption to plumbing or electrics"
    },

    "$Text4": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "bold",
        "font-size": "1.4em",
        "#content": "Friendly smartphone interface gives control from inside or outside the house"
    },

    "$Text5": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "bold",
        "font-size": "1.4em",
        "#content": "From Â£50 per room, installed"
    },

    "$Text6": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "bold",
        "font-size": "1.4em",
        "#content": ""
    },

    "$Image1": {
        "#element": "img",
        "width": "50%",
        "height": "auto",
        "@src": "/resources/img/example.jpg"
    }
}
