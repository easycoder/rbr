{
    "#doc": "Get the controller SSID",
    "#element": "div",
    "position": "absolute",
    "left": 0,
    "top": 0,
    "width": "100%",
    "height": "100%",
    "#": ["$Text1", "$Text2", "$SSID", "$Text3", "$Text4"],

    "$Text1": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "green",
        "font-size": "2em",
        "#content": "Controller SSID"
    },

    "$Text2": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "First we need to confirm the SSID of your system controller."
    },

    "$SSID": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "text-align": "center",
        "#": ["$Single", "$Multiple"],

        "$Single": {
            "#element": "div",
            "@id": "cf-ssid",
            "width": "calc(100% - 4em)",
            "height": "1.5em",
            "font-size": "1.2em",
            "border": "1px solid black",
            "pointer-events": "none",
            "padding-top": "0.5em",
            "margin": "0 auto"
        },

        "$Multiple": {
            "#element": "div",
            "@id": "cf-ssids",
            "display": "none",
            "width": "calc(100% - 4em)",
            "height": "10em",
            "overflow-y": "scroll",
            "font-size": "1.2em",
            "border": "1px solid black",
            "margin": "0 auto"
        }
    },

    "$Text3": {
        "#element": "div",
        "@id": "cf-text3",
        "display": "none",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "Select the SSID of your system controller."
    },

    "$Text4": {
        "#element": "div",
        "margin": "1em 1em 0 1em",
        "color": "indigo",
        "font-weight": "normal",
        "font-size": "1.4em",
        "text-align": "left",
        "#content": "To continue, tap the Next button below."
    }
}
